<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApplication.Pages.RecipeEditor"
             x:Class="MobileApplication.Pages.RecipeEditor.RecipeEditor"
             x:DataType="local:RecipeEditorViewModel"
             Title="Recipe Editor">

  <ScrollView Margin="0,10" HorizontalOptions="Center">
    <VerticalStackLayout WidthRequest="325" HorizontalOptions="Center" Spacing="10">
      <HorizontalStackLayout Margin="30" Spacing="10" HorizontalOptions="Center">
        <Button Text="Save" Command="{Binding SavePetCommand}"/>
        <Button Text="Cancel" Command="{Binding CancelCommand}"/>
      </HorizontalStackLayout>

      <StackLayout>
        <Label Text="Name"/>
        <Entry Text="{Binding EditedRecipe.Name}"/>
      </StackLayout>

      <StackLayout>
        <Label Text="Description"/>
        <Editor Text="{Binding EditedRecipe.Description}" AutoSize="TextChanges" HeightRequest="200"/>
      </StackLayout>

      <StackLayout>
        <Label Text="Rating"/>
        <HorizontalStackLayout Spacing="10" WidthRequest="300" HorizontalOptions="Center">
          <Slider VerticalOptions="Center" WidthRequest="200" Value="{Binding EditedRecipe.Rating}" Maximum="5" Minimum="1" />
          <HorizontalStackLayout>
            <Label Text="{Binding EditedRecipe.Rating}" VerticalOptions="Center" FontSize="18" />
            <Label Text="â˜…" VerticalOptions="Center" TextColor="Orange" FontSize="18"/>
          </HorizontalStackLayout>
        </HorizontalStackLayout>
      </StackLayout>

      <VerticalStackLayout HorizontalOptions="Center" Spacing="10">
        <Label Text="Upload a photo" HorizontalOptions="Center"/>
        <Border StrokeThickness="0" WidthRequest="325">
          <Border.StrokeShape>
            <RoundRectangle CornerRadius="10,10,10,10"/>
          </Border.StrokeShape>
          <Image Source="{Binding EditedRecipe.ImagePath}"/>
        </Border>
        <Button Text="Upload" Command="{Binding TakePhotoCommand}" HorizontalOptions="Center"/>
      </VerticalStackLayout>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>