<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileApplication.Pages.RecipeEditor"
             x:Class="MobileApplication.Pages.RecipeEditor.RecipeEditor"
             x:DataType="local:RecipeEditorViewModel"
             Title="Recipe Editor">
  <VerticalStackLayout WidthRequest="350" HorizontalOptions="Center" Spacing="10">
    <HorizontalStackLayout Margin="30" Spacing="10" HorizontalOptions="Center">
      <Button Text="Save" Command="{Binding SavePetCommand}"/>
      <Button Text="Cancel" Command="{Binding CancelCommand}"/>
    </HorizontalStackLayout>
    
    <StackLayout>
      <Label Text="Name"/>
      <Entry Text="{Binding Draft.Name}"/>
    </StackLayout>

    <StackLayout>
      <Label Text="Description"/>
      <Editor Text="{Binding Draft.Description}" AutoSize="TextChanges" HeightRequest="200"/>
    </StackLayout>
    
    <StackLayout>
      <Label Text="Rating"/>
      <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
        <Slider VerticalOptions="Center" WidthRequest="350" Value="{Binding Draft.Rating}" Maximum="5" Minimum="1" />
        <Label VerticalOptions="Center" Text="{Binding Draft.Rating}"/>
      </HorizontalStackLayout>
    </StackLayout>

    <StackLayout HorizontalOptions="Center">
      <Label Text="Upload a photo" />
      <Button Text="Upload" Command="{Binding TakePhotoCommand}"/>
    </StackLayout>
  </VerticalStackLayout>
</ContentPage>