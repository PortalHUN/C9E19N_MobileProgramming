<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileApplication"
    xmlns:list="clr-namespace:MobileApplication.Pages.RecipeList"
    xmlns:editor="clr-namespace:MobileApplication.Pages.RecipeEditor"
    xmlns:detail="clr-namespace:MobileApplication.Pages.RecipeDetail"
    Title="MobileApplication">

  <ShellContent
        Title="Recipes"
        ContentTemplate="{DataTemplate list:RecipeList}"
        Route="RecipeList" />

  <ShellContent 
    Title="Recipe Editor"
    ContentTemplate="{DataTemplate editor:RecipeEditor}"
    Route="RecipeEditor"
    />

  <ShellContent 
  Title="Recipe Detail Viewer"
  ContentTemplate="{DataTemplate detail:RecipeDetail}"
  Route="RecipeDetail"
  />
</Shell>
